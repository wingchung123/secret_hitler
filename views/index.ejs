<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Secret Hitler Board Game</title>
		<!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
		<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
		<script src="/bower_components/jquery/dist/jquery.min.js"></script>
		<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>

	<body>
		<nav class="navbar navbar-expand-sm navbar-dark" style= "background-color: #e5644a;">
			<a class="navbar-brand" href="#">
				<img src="/images/header.jpg" width="60" height="40" alt="">
			</a>
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="/">Home</a>
				</li>
			</ul>
		</nav>

		<div class="container-fluid text-center" style="background-color: #ff6650;">
			<img src="/images/logo1.png" width="500vw" height="300vh" alt="">
		</div>
		<div class="container text-center">
			<% if (typeof status_code !== 'undefined' && status_code != 200) { %>
				<div class="alert alert-danger mb-0 mt-3">
					<strong>Error:</strong> Unknown server error. Please contact Wing.
				</div>
			<% } %>
			<div class= "my-3" id="startGame">
				<form action="/createGame" method="post">
					<div class="row my-3">
						<div  class="col-sm-4"></div>
						<div class="col-sm-4 " id="numPlayersInput">
							<label for="numPlayers">Number of players:</label>
							<select class="form-control" id="numPlayers" name="numPlayers">
								<option>5</option>
								<option>6</option>
								<option>7</option>
								<option>8</option>
								<option>9</option>
								<option>10</option>
							</select>
						</div>
					</div>
					<input type="submit" value="Start Game!" class="btn btn-outline-primary">
				</form>
			</div>
			<p>OR</p>
			<div class="my-3" id="joinGame">
				<a href="/game/join_game" class="btn btn-success" role="button">Join Game!</a>
			</div>
		</div>
	</body>
</html> 
